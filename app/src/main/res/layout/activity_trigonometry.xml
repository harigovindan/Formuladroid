<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="sin θ = Opposite / Hypotenuse\n\ncos θ =Adjacent / Hypotenuse\n\ntan θ = Opposite / Adjacent\n\ncosec θ = Hypotenuse / Opposite\n\nsec θ = Hypotenuse / Adjacent\n\ncot θ = Adjacent / Opposite"
        android:id="@+id/textView"
        android:textSize="15dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/imageView4"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/triangle"
        android:id="@+id/imageView4"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/Basic_Representation"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basic Representation"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#ff0000"
        android:id="@+id/Basic_Representation"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="sin (x + y) = sin x cos y + cos x sin y\n\nsin (x - y) = sin x cos y - cos x sin y\n\ncos (x + y) = cos x cos y - sin x sin y\n\ncos (x - y) = cos x cos y + sin x sin y\n\ntan (x + y) = tan x + tan y / 1 - tan x tan y\n\ntan (x - y) = tan x - tan y / 1 + tan x tan y\n\n"
        android:id="@+id/textView9"
        android:textSize="15dp"
        android:layout_below="@+id/textView10"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Addition/Subtraction Formulas"
        android:textColor="#ff0000"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/textView10"
        android:layout_marginTop="69dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
</ScrollView>
